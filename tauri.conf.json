{
  "$schema": "https://esm.sh/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm vite:build",
    "beforeDevCommand": "pnpm vite:dev",
    "devPath": "http://localhost:3000",
    "distDir": "./dist"
  },
  "package": {
    "productName": "snowtrail",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "public/icon.png"
      ],
      "identifier": "dev.snowtrailapp",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "13.0"
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "tauri-app",
        "width": 1200,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "public/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": true
    }
  }
}
