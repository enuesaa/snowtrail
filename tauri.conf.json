{
  "build": {
    "beforeBuildCommand": "yarn next:build",
    "beforeDevCommand": "yarn next:dev",
    "devPath": "http://localhost:3000",
    "distDir": "./dist"
  },
  "package": {
    "productName": "snowtrail-app",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "public/icon.png"
      ],
      "identifier": "dev.nsrciog.snowtrail",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "13.0"
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "tauri-app",
        "width": 1200
      }
    ],
    "systemTray": {
      "iconPath": "public/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": true
    }
  }
}
